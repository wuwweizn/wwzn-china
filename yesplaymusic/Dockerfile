            <div class="error-buttons">
                <button onclick="reloadMusic()" class="btn btn-primary">ğŸ”„ é‡æ–°åŠ è½½</button>
                <button onclick="useBackup()" class="btn">ğŸµ å¤‡ç”¨æ–¹æ¡ˆ</button>
            </div>
        </div>
    </div>
    
    <iframe id="music-frame" style="display: none;"></iframe>
    
    <script>
        let apiUrl = '/api';
        let originalApiUrl = '';
        let retryCount = 0;
        const maxRetries = 3;
        
        // åˆå§‹åŒ–
        async function init() {
            await loadConfig();
            await checkAPI();
            loadYesPlayMusic();
        }
        
        // åŠ è½½é…ç½®
        async function loadConfig() {
            try {
                const response = await fetch('/config.json');
                if (response.ok) {
                    const config = await response.json();
                    originalApiUrl = config.apiUrl || '/api';
                    apiUrl = '/api'; // ä½¿ç”¨ä»£ç†åœ°å€
                    document.getElementById('api-url').textContent = originalApiUrl;
                }
            } catch (error) {
                console.log('é…ç½®åŠ è½½å¤±è´¥:', error);
            }
        }
        
        // æ£€æŸ¥APIçŠ¶æ€
        async function checkAPI() {
            const statusEl = document.getElementById('api-status');
            
            try {
                const response = await fetch('/netease-api-test', { 
                    method: 'GET',
                    timeout: 5000 
                });
                
                if (response.ok) {
                    statusEl.textContent = 'âœ… å·²è¿æ¥';
                    statusEl.className = 'api-status success';
                    return true;
                } else {
                    statusEl.textContent = 'âš ï¸ å¼‚å¸¸';
                    statusEl.className = 'api-status warning';
                }
            } catch (error) {
                statusEl.textContent = 'âŒ å¤±è´¥';
                statusEl.className = 'api-status error';
            }
            return false;
        }
        
        // åŠ è½½YesPlayMusic
        function loadYesPlayMusic() {
            const frame = document.getElementById('music-frame');
            const loading = document.getElementById('loading');
            
            // ä½¿ç”¨æ‚¨æä¾›çš„å¯ç”¨ç•Œé¢
            frame.src = 'https://my-yesplaymusic-five.vercel.app/';
            
            frame.onload = function() {
                loading.style.display = 'none';
                frame.style.display = 'block';
                
                // å°è¯•é…ç½®API
                setTimeout(() => {
                    try {
                        frame.contentWindow.postMessage({
                            type: 'CONFIGURE_API',
                            apiUrl: window.location.origin + apiUrl,
                            originalUrl: originalApiUrl
                        }, '*');
                    } catch (e) {
                        console.log('APIé…ç½®å¤±è´¥:', e);
                    }
                }, 2000);
            };
            
            frame.onerror = function() {
                retryCount++;
                if (retryCount < maxRetries) {
                    setTimeout(() => loadYesPlayMusic(), 3000);
                } else {
                    loading.style.display = 'none';
                    document.getElementById('error-page').style.display = 'flex';
                }
            };
            
            // è¶…æ—¶å¤„ç†
            setTimeout(() => {
                if (frame.style.display === 'none') {
                    frame.onerror();
                }
            }, 15000);
        }
        
        // é‡æ–°åŠ è½½éŸ³ä¹
        function reloadMusic() {
            retryCount = 0;
            document.getElementById('loading').style.display = 'flex';
            document.getElementById('error-page').style.display = 'none';
            document.getElementById('music-frame').style.display = 'none';
            loadYesPlayMusic();
        }
        
        // åˆ‡æ¢å¤´éƒ¨æ˜¾ç¤º
        function toggleHeader() {
            const header = document.querySelector('.header');
            const frame = document.getElementById('music-frame');
            
            if (header.style.display === 'none') {
                header.style.display = 'flex';
                frame.style.top = '50px';
                frame.style.height = 'calc(100vh - 50px)';
            } else {
                header.style.display = 'none';
                frame.style.top = '0';
                frame.style.height = '100vh';
            }
        }
        
        // ä½¿ç”¨å¤‡ç”¨æ–¹æ¡ˆ
        function useBackup() {
            window.location.href = '/simple/';
        }
        
        // ç›‘å¬æ¥è‡ªiframeçš„æ¶ˆæ¯
        window.addEventListener('message', function(event) {
            if (event.data && event.data.type === 'API_CONFIGURED') {
                console.log('YesPlayMusic APIé…ç½®æˆåŠŸ');
            }
        });
        
        // ç›‘å¬APIçŠ¶æ€å˜åŒ–
        setInterval(checkAPI, 30000);
        
        // å¯åŠ¨
        document.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>
EOF
    fi

# ä¿®æ”¹ä»»ä½•ç°æœ‰çš„YesPlayMusicé…ç½®ä»¥é€‚é…æˆ‘ä»¬çš„API
RUN find /usr/share/nginx/html -name "*.js" -o -name "*.html" | while read file; do \
        if [ -f "$file" ]; then \
            # æ›¿æ¢å„ç§å¯èƒ½çš„APIåœ°å€æ ¼å¼
            sed -i 's|https://netease-cloud-music-api[^/]*\.vercel\.app|/api|g' "$file" 2>/dev/null || true; \
            sed -i 's|https://music-api[^/]*\.vercel\.app|/api|g' "$file" 2>/dev/null || true; \
            sed -i 's|http://localhost:3000|/api|g' "$file" 2>/dev/null || true; \
            sed -i 's|127\.0\.0\.1:3000|/api|g' "$file" 2>/dev/null || true; \
        fi; \
    done || echo "é…ç½®ä¿®æ”¹å®Œæˆ"

# åœ¨HTMLä¸­æ³¨å…¥APIé…ç½®
RUN if [ -f "/usr/share/nginx/html/index.html" ]; then \
